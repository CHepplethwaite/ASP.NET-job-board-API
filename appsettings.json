{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=JobBoardDB;Trusted_Connection=True;MultipleActiveResultSets=true"
  },
  "JwtSettings": {
    "Secret": "YourSuperSecretKeyHereWithAtLeast32CharactersLong",
    "Issuer": "JobBoardAPI",
    "Audience": "JobBoardClient",
    "AccessTokenExpirationMinutes": 60,
    "RefreshTokenExpirationDays": 7,
    "EmailVerificationCodeExpirationMinutes": 15,
    "PasswordResetTokenExpirationMinutes": 30
  },
  "SendGrid": {
    "ApiKey": "YourSendGridApiKey",
    "FromEmail": "noreply@jobboard.com",
    "FromName": "JobBoard Team"
  },
  "App": {
    "BaseUrl": "https://localhost:5001",
    "Name": "JobBoard API"
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "https://localhost:3000"
    ]
  },
  "ExternalAuth": {
    "Google": {
      "ClientId": "YourGoogleClientId",
      "ClientSecret": "YourGoogleClientSecret"
    },
    "LinkedIn": {
      "ClientId": "YourLinkedInClientId",
      "ClientSecret": "YourLinkedInClientSecret"
    }
  }
}